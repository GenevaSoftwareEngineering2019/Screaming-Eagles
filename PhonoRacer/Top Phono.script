function init(self)
	self.t = 2 
	local s = vmath.vector3(0.3, 0.3, 0.3)
	go.set_scale(s)
end

function update(self, dt)
	
	local speed = -60

	local p = go.get_position()
	p.x = p.x + speed * dt
	if p.x <= 800 then
		local pausenode = gui.get_node("Selection")
		if gui.pick_node(pausenode, action.x, action.y) then
			msg.post("Selection", "show")
		end
	end
	go.set_position(p)
end